#include <iostream.h>
#include <math.h>
#include<conio.h>
int b=0,d=0,e=0,c=0;
int main(){
	cout<<"Numero Binario: ";
  cin>>b;
	while(b>=10){
		c=0;
		while(b>=10){
			b=b-10;
			c++;
		}
		d=d+b*pow(2,e);
		e++;
		b=c;
	}
	d=d+c*pow(2,e);
	cout<<endl<<"Conversion a decimal: "<<d<<endl;
	cout<<"    Presione una tecla para salir"
	getch();
}

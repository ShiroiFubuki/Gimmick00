#include <iostream.h>
#include <math.h>
#include<conio.h>
int b=0,d=0,e=0,c=0;
int base, suma, num, res, base = 1, suma = 0;

char menu() 
{ 
char c; 
printf("1 - Decimal -> Binario\n"); 
printf("2 - Decimal -> Octal\n"); 
printf("S - Salir\n"); 
printf("\nSeleccione opcion: "); 
c = getche(); 
return c; 
}
unsigned long conversor(unsigned long n1,int base1,int base2) 
{ 
unsigned long alg,mult=1,n2=0; 
while (n1 > 0) 
{ 
alg = n1 % base1; 
n1 /= base1; 
n2 += (alg*mult); 
mult *= base2; 
} 
return n2; 
} 

void main() 
{ 
unsigned long n; 
char op; 


for(;;) 
{ 
clrscr(); 
op = menu(); 
clrscr(); 

switch(op) 
{ 
case '1': 

	cout<<"Numero Binario: ";
  cin>>b;
	while(b>=10){
		c=0;
		while(b>=10){
			b=b-10;
			c++;
		}
		d=d+b*pow(2,e);
		e++;
		b=c;
	}
	d=d+c*pow(2,e);
	cout<<endl<<"Conversion a decimal: "<<d<<endl;
	cout<<"    Presione una tecla para salir"
case '2': 

     printf("Ingresa un numero:\n\t");
     scanf("%d", &num);

             do
             {//inicio while octales
                 res = num % 8;
                num = num / 8;
                suma = suma + res * base;
                 base = base * 10;

             } while(num > 0);//fin while (octales)
            printf("El numero octal es:\t%d\n", suma);

}
